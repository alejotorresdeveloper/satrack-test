{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "MongoConnectionString": "mongodb://mongodb_container:27017/?retryWrites=true&serverSelectionTimeoutMS=5000&connectTimeoutMS=10000", //Uso con docker-compose
    //"MongoConnectionString": "mongodb://localhost:27017/?retryWrites=true&serverSelectionTimeoutMS=5000&connectTimeoutMS=10000", //Uso local ejecuntando la aplicacion desde visual studio
    "MongoDataBaseName": "GestionTareas",
    "ConnectTimeout": "10",
    "SocketTimeout": "30",
    "MaxConnectionPoolSize": "200",
    "MinConnectionPoolSize": "50",
    "WaitQueueTimeout": "30",
    "ServerSelectionTimeout": "30",
    "HeartbeatInterval": "10",
    "HeartbeatTimeout": "5",
    "LocalThreshold": "15",
    "RetryReads": "true",
    "RetryWrites": "true"
  },
  "AllowedHosts": "*"
}